        hostname: email-0
        ip_address: 203.0.113.80

  - name: shard-gateway-1
    cluster_id: prod-cluster-1
    role: gateway
    nodes:
      - id: gateway-0
        hostname: gateway-0
        ip_address: 203.0.113.90
