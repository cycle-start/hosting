{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "Log Volume by Service",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({job=~\".+\"} [$__interval])) by (service)",
          "legendFormat": "{{ service }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 50,
            "stacking": { "mode": "normal" }
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "title": "Error Logs",
      "type": "logs",
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 6 },
      "id": 2,
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{job=~\".+\"} |~ \"(?i)error|fail|fatal|panic\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none",
        "enableLogDetails": true
      }
    },
    {
      "title": "All Logs",
      "type": "logs",
      "gridPos": { "h": 14, "w": 24, "x": 0, "y": 18 },
      "id": 3,
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{job=~\".+\", service=~\"$service\", region=~\"$region\", cluster=~\"$cluster\", shard=~\"$shard\", node_role=~\"$node_role\", hostname=~\"$hostname\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none",
        "enableLogDetails": true
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values(service)",
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true,
        "allValue": ".+",
        "multi": true,
        "refresh": 2
      },
      {
        "name": "region",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values(region)",
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true,
        "allValue": ".+",
        "multi": true,
        "refresh": 2
      },
      {
        "name": "cluster",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values(cluster)",
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true,
        "allValue": ".+",
        "multi": true,
        "refresh": 2
      },
      {
        "name": "shard",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values(shard)",
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true,
        "allValue": ".+",
        "multi": true,
        "refresh": 2
      },
      {
        "name": "node_role",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values(node_role)",
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true,
        "allValue": ".+",
        "multi": true,
        "refresh": 2
      },
      {
        "name": "hostname",
        "type": "query",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values(hostname)",
        "current": { "text": "All", "value": "$__all" },
        "includeAll": true,
        "allValue": ".+",
        "multi": true,
        "refresh": 2
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "browser",
  "title": "Log Explorer",
  "uid": "log-explorer",
  "version": 1
}
