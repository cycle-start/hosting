# Core PostgreSQL database
CORE_DATABASE_URL=postgres://hosting:hosting@localhost:5432/hosting_core

# PowerDNS PostgreSQL database
POWERDNS_DATABASE_URL=postgres://hosting:hosting@localhost:5433/hosting_powerdns

# Temporal workflow engine
TEMPORAL_ADDRESS=localhost:7233

# Core API HTTP server
HTTP_LISTEN_ADDR=:8090

# Node agent gRPC server
GRPC_LISTEN_ADDR=:9090

# Node agent address (for worker to connect)
NODE_AGENT_ADDR=localhost:9090

# MySQL DSN (for node agent database operations)
MYSQL_DSN=root:rootpassword@tcp(localhost:3306)/

# Logging
LOG_LEVEL=info

# API key for hostctl/seed commands (create with: just create-api-key <name>)
HOSTING_API_KEY=hst_...
