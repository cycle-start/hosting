# Base domain for control plane hostnames (admin., api., home., etc.)
BASE_DOMAIN=massive-hosting.com

# API key for Ansible dynamic inventory and admin tooling
HOSTING_API_KEY=hst_...

# Core DB (Postgres) — used by core-api and worker
CORE_DATABASE_URL=postgres://hosting:hosting@10.10.10.2:5432/hosting_core

# PowerDNS DB (Postgres) — used by worker
POWERDNS_DATABASE_URL=postgres://hosting:hosting@10.10.10.2:5433/hosting_powerdns

# Stalwart mail server admin token
STALWART_ADMIN_TOKEN=dev-token

# AES-256 key for encrypting secrets in core DB (hex-encoded, 32 bytes)
# Generate with: openssl rand -hex 32
SECRET_ENCRYPTION_KEY=

# LLM agent (optional)
LLM_API_KEY=
AGENT_API_KEY=

# Control panel
CONTROLPANEL_DATABASE_URL=postgres://controlpanel:controlpanel@10.10.10.2:5432/controlpanel
CONTROLPANEL_JWT_SECRET=controlpanel-dev-jwt-secret-change-me-in-prod
