# Additional Vector sources for database nodes.

[sources.mysql_error]
type = "file"
include = ["/var/log/mysql/error.log"]
read_from = "end"

[transforms.label_mysql]
type = "remap"
inputs = ["mysql_error"]
source = '''
.service = "mysql"
.level = "error"
'''

[sinks.loki_db]
type = "loki"
inputs = ["label_mysql"]
endpoint = "{{ loki_endpoint }}"
encoding.codec = "text"

{% raw %}
[sinks.loki_db.labels]
service = "{{ service }}"
hostname = "{{ host }}"
level = "{{ level }}"
job = "mysql"
{% endraw %}
